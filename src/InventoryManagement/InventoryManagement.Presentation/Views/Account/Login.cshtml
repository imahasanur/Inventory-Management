@model LoginModel

@{
    ViewData["Title"] = "Log In";
}

<link href="~/content/css/Registration.css" rel="stylesheet" />

<div class="container-registration">
    <div class="row justify-content-md-center">
        <div class="col-md-12 col-sm-12 col-lg-12 shadow p-3 mb-2 rounded">
            <section>
                <form id="account" method="post" asp-antiforgery="true" asp-controller="Account" asp-action="Login" asp-area="" asp-route-returnurl="/User/TopQuestions">
                    <h5 class="text-center p-3">Use an account to log in.</h5>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <img class="text-center" asp-area="" asp-controller="Captcha" asp-action="GenerateCaptchaImage" src="@Url.Action("GenerateCaptchaImage", "Captcha", new { area = "" })" alt="" />
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="CaptchaInput">Captcha Input</label>
                        <input asp-for="CaptchaInput" class="form-control" autocomplete="off" aria-required="true" placeholder="Enter Captcha" />
                        <span asp-validation-for="CaptchaInput" class="text-danger"></span>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a asp-area="" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
